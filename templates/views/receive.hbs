// Date section
   function fullDate(date)
  {
    var minDate = date.getFullYear() + '-';
      var temp;
      if(date.getMonth() + 1 < 10)
      {
        temp = date.getMonth() + 1;
        minDate += "0" + temp + "-";
      }else{
        minDate += temp + "-";
      }
      if(date.getDate() < 10)
      {
        minDate += "0" + date.getDate();
      }else{
        minDate += date.getDate();
      }
     return minDate;
  }

